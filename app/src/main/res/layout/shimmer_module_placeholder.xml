<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    android:backgroundTint="@color/grey_200"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/tv_subject"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/ic_rounded_background"
            android:backgroundTint="@color/grey_400"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.7" />

        <View
            android:id="@+id/tv_total_question"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_rounded_background"
            android:backgroundTint="@color/grey_400"
            app:layout_constraintStart_toStartOf="@+id/tv_subject"
            app:layout_constraintTop_toBottomOf="@+id/tv_subject"
            app:layout_constraintWidth_percent="0.5" />

        <View
            android:id="@+id/tv_duration"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/ic_rounded_background"
            android:backgroundTint="@color/grey_400"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_total_question"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_question"
            app:layout_constraintWidth_percent="0.4"
            tools:text="@string/duration" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>